<!DOCTYPE html>
<html   lang="en" dir="ltr" >

<head>
    <%- include('includes/head.ejs') %>

	<title>Register</title>
</head>

<body class="DEFAULT_THEME bg-white">
	<main>
				<!-- Main Content -->
                <div class="flex flex-col w-full  overflow-hidden relative min-h-screen radial-gradient items-center justify-center g-0 px-4">
                  
                    <div class="justify-center items-center w-full card lg:flex max-w-md ">
                        <div class=" w-full card-body">
                            <div class="flex justify-center gap-2 py-2">
                                <img src="/images/logos/paw.png" style="width: 35px; height: 35px;">
                                <p class="mb-4 text-gray-400 font-bold text-lg text-center">The PetSupport Admin Register</p>

                            </div>
                            <!-- form -->
                            <form method="post" action="/register">
                                <!-- username -->
                                <div class="mb-4">
                                    <label for="username"
                                    class="block text-sm  mb-2 text-gray-400">Name</label>
                                <input type="text" id="username" name="username"
                                    class="py-3 px-4 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 " aria-describedby="hs-input-helper-text">
                                </div>
                                <!-- Email -->
                                <div class="mb-4">
                                    <label for="email"
                                    class="block text-sm  mb-2 text-gray-400">Email Address</label>
                                <input type="email" id="email" name="email"
                                    class="py-3 px-4 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 " aria-describedby="hs-input-helper-text">
                                </div>
                                <!-- password -->
                                <div class="mb-4">
                                    <label for="password"
                                    class="block text-sm  mb-2 text-gray-400">Password</label>
                                <input type="password" id="password" name="password"
                                    class="py-3 px-4 block w-full border-gray-200 rounded-sm text-sm focus:border-blue-600 focus:ring-0 " aria-describedby="hs-input-helper-text">
                                </div>
                        
                                <div class="grid my-6">
                                    <button
                                        type="submit"
                                        class="rounded-sm w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                                    >
                                        Sign up
                                    </button>
                                  </div>    
        
                                    <div class="flex justify-center gap-2 items-center">
                                        <p class="text-base font-semibold text-gray-400">Already have an Account?</p>
                                        <a href="/login" class="text-sm font-semibold text-blue-600 hover:text-blue-700">Sign In</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
				
			</div>
		<!--end of project-->
	</main>


    <%- include('includes/scripts.ejs') %>

</body>

</html>